{
  "name": "@pepper/react-file-viewer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "analyze": "source-map-explorer 'dist/index.js'",
    "build": "rm tsconfig.tsbuildinfo || true && tsc --emitDeclarationOnly --declaration && vite build",
    "watch": "tsc --emitDeclarationOnly --declaration && vite build --watch",
    "pre-commit": "lint-staged",
    "build:self": "tsc && vite build",
    "preview": "vite preview"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/index.js",
  "files": [
    "./dist/style.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "mammoth": "^1.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-pdf": "^6.2.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-pdf": "^6.2.0",
    "@vitejs/plugin-react": "^3.1.0",
    "@types/node": "^17.0.0",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vite-plugin-svgr": "^2.2.1",
    "vite-tsconfig-paths": "^3.6.0"
  },
  "lint-staged": {
    "*.js": [
      "yarn prettier --write"
    ],
    "src/**/*.+(js|jsx|md|yml|yaml|ts|tsx)": [
      "yarn prettier --write",
      "yarn eslint --fix --fix-type problem --cache --ignore-path .eslintignore"
    ]
  },
  "volta": {
    "node": "16.18.0"
  }
}
